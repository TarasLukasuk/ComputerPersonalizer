<UserControl x:Class="ComputerPersonalizer.Control.HistoryColorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerPersonalizer.Control"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="771*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Border Background="Black"/>
            <Border x:Name="ShowColor" Margin="2"/>
        </Grid>
        <Grid Grid.Column="1">
            <Label x:Name="HistoryColorText"/>
        </Grid>
    </Grid>
</UserControl>
